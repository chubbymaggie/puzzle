package fr.inria.diverse.puzzle.metrics.specialCharts;

import java.util.ArrayList;

import fr.inria.diverse.melange.metamodel.melange.Language;

public class IndexPackage {

	private int index;
	private Language language;
	
	public IndexPackage(int index, Language language) {
		super();
		this.index = index;
		this.language = language;
	}
	
	public int getIndex() {
		return index;
	}
	
	public void setIndex(int index) {
		this.index = index;
	}
	
	public EPackage getePackage() {
		return ePackage;
	}
	
	public void setePackage(EPackage ePackage) {
		this.ePackage = ePackage;
	}
	
	public static int getIndexByEPackage(ArrayList<IndexPackage> source, EPackage ePackage){
		for (IndexPackage indexPackage : source) {
			if(indexPackage.getePackage().equals(ePackage))
				return indexPackage.index;
		}
		return -1;
	}
}
