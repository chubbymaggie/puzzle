grammar fr.inria.diverse.puzzle.adl.Language with org.eclipse.xtext.xbase.Xbase

generate language "http://www.inria.fr/diverse/puzzle/adl/Language"

import "http://www.eclipse.org/emf/2002/Ecore" as ecore


PuzzleComposition:
	importSection = XImportSection?
	(composition = CompositeLanguage);

CompositeLanguage returns CompositeLanguage:
	{CompositeLanguage}
	'composite' name = STRING
	'{'
		(links+=Connector (links+=Connector)*)?
	'}';

Connector returns Connector:
	AggregationConnector;

AggregationConnector returns AggregationConnector:
	'connector'
	'('
		left = STRING ','
		right = STRING 
	')';
