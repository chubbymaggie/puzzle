package fr.inria.diverse.melange.ui.builder

import org.eclipse.core.resources.IProject
import org.eclipse.core.runtime.IProgressMonitor
import org.eclipse.core.resources.IResource
import fr.inria.diverse.k3.sle.common.utils.ModelUtils
import vm.LanguageFeatureModel
import fr.inria.diverse.puzzle.derivator.impl.IDerivator
import fr.inria.diverse.puzzle.derivator.impl.PuzzleDerivator
import java.util.ArrayList

/**
 * Builder for the action: Configure.
 * Loads the input and performs the delegation to the corresponding plug-in.
 * 
 * @author David Mendez-Acuna
 */
class DeriveLanguageFromConfigurationBuilder extends AbstractBuilder {
	
	def void deriveLanguageFromConfigurationBuilder(ArrayList<IResource> res, IProject project, IProgressMonitor monitor) {
		var IResource resource0 = res.get(0);
				
		var LanguageFeatureModel fm = ModelUtils.loadXMIFile(res.location.toString) as LanguageFeatureModel
		println('coucou ' + fm)
		var IDerivator derivator = PuzzleDerivator.instance;
		derivator.derivateLangaugeFromConfiguration(project, null, fm)
	}
}