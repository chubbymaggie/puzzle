package fr.inria.diverse.melange.ui.preferences;

import com.google.inject.Inject;
import fr.inria.diverse.melange.preferences.MelangePreferencesConstants;
import org.eclipse.jface.preference.IPreferenceStore;
import org.eclipse.xtext.ui.editor.preferences.IPreferenceStoreAccess;

@SuppressWarnings("all")
public class MelangePreferences {
  @Inject
  private IPreferenceStoreAccess store;
  
  public boolean isGenerateAdaptersCode() {
    IPreferenceStore _preferenceStore = this.store.getPreferenceStore();
    return _preferenceStore.getBoolean(MelangePreferencesConstants.GENERATE_ADAPTERS_CODE);
  }
  
  public void setGenerateAdaptersCode(final boolean value) {
    IPreferenceStore _writablePreferenceStore = this.store.getWritablePreferenceStore();
    _writablePreferenceStore.setValue(MelangePreferencesConstants.GENERATE_ADAPTERS_CODE, value);
  }
}
