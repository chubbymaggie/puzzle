	with tfsm.RegionAspect
	with tfsm.StateAspect
	with tfsm.TransitionAspect
	with tfsm.TriggerAspect
	with tfsm.FinalStateAspect
	with tfsm.ExpressionAspect
	with tfsm.LiteralAspect
	with tfsm.IntegerLitAspect
	with tfsm.StringLitAspect
	with tfsm.BoolLitAspect
	with tfsm.ArithmeticExpressionAspect
	with tfsm.RelationalExpressionAspect
	with tfsm.ConstraintAspect
	with tfsm.RelationalConstraintAspect
	with tfsm.StatementAspect
	with tfsm.ProgramAspect
	with tfsm.VarDeclAspect
	with tfsm.ConditionalAspect
	with tfsm.LoopAspect
	with tfsm.PrintlnAspect
	with tfsm.PrintAspect
	with tfsm.AssignationAspect
