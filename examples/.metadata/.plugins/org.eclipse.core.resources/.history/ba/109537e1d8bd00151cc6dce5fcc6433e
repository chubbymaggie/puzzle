package family

/**
 * A language for simple state machines.
 */
language Logo {
	syntax "platform:/resource/fr.inria.diverse.examples.logo.syntax/models/Logo.ecore"
	
	exactType LogoMT
}

/**
 * A language for manipulating Logo's tutle 
 */
language Expressions {
	
	syntax "platform:/resource/puzzle.examples.overlap.logo.metamodel/models/logo.ecore"
	 
	with logo.InstructionAspect 
	with logo.PrimitiveAspect
	with logo.BackAspect
	with logo.ForwardAspect
	with logo.LeftAspect
	with logo.RightAspect
	with logo.PenDownAspect
	with logo.PenUpAspect
	with logo.ClearAspect
	with logo.ExpressionAspect
	with logo.LiteralAspect
	with logo.IntegerLitAspect
	with logo.StringLitAspect
	with logo.BoolLitAspect
	with logo.ArithmeticExpressionAspect
	with logo.RelationalExpressionAspect
	with logo.ProcCallAspect
	with logo.BlockAspect
	with logo.ControlStructureAspect
	with logo.IfAspect
	with logo.RepeatAspect
	with logo.WhileAspect
	with logo.ParameterAspect
	with logo.ParameterCallAspect
	with logo.LogoProgramAspect
	
	exactType LogoMT
}


/**
 * A language for Flowcharts 
 */
language Flowcharts {
	
	syntax "platform:/resource/puzzle.examples.overlap.flowchart.metamodel/models/flowchart.ecore"
	
	with flowchart.FlowchartAspect
	with flowchart.NodeAspect
	with flowchart.ArcAspect
	with flowchart.ActionAspect
	with flowchart.StartAspect
	with flowchart.EndAspect
	with flowchart.DecisionAspect
	with flowchart.ExpressionAspect
	with flowchart.LiteralAspect
	with flowchart.IntegerLitAspect
	with flowchart.StringLitAspect
	with flowchart.BoolLitAspect
	with flowchart.ArithmeticExpressionAspect
	with flowchart.RelationalExpressionAspect
	with flowchart.ConstraintAspect
	with flowchart.RelationalConstraintAspect
	with flowchart.StatementAspect
	with flowchart.ProgramAspect
	with flowchart.VarDeclAspect
	with flowchart.ConditionalAspect
	with flowchart.LoopAspect
	with flowchart.PrintlnAspect
	with flowchart.PrintAspect
	with flowchart.AssignationAspect
	with flowchart.WaitAspect
	
	exactType FlowchartMT
}